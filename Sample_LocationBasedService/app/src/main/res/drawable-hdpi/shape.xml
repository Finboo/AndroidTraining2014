<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
      
      <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#AEDCEA"
        		android:endColor="#72ACB9"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#336666" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
            
	 <item>
        <shape>
            <gradient
                android:startColor="#AEDCEA"
        		android:endColor="#72ACB9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#336666" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>